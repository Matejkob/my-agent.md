{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      // GitHub
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      // Git
      "Bash(git:*)",
      // Files System
      "Bash(mv:*)",
      "Bash(mkdir:*)"
      "Bash(find:*)",
      "Bash(rg:*)",
      "Bash(echo:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(source:*)",
      // Xcode / Swift
      "Bash(xcodebuild:*)",
      "Bash(swift:*)",
    ],
    "ask": [
        // GitHub
        "Bash(gh pr create:*)",
        // Git
        "Bash(git commit:*)",
    ],
    "deny": []
  },
  "cleanupPeriodDays": 1800,
}

